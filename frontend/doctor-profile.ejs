<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پروفایل کاربری</title>
    <link rel="stylesheet" href="/css/doctorProfile.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
</head>
<body>
    <main class="main">
        <div class="profile-cont">
            <div class="title" style="display: flex;margin-bottom: 10px;">پروفایل کاربری</div>
            <div class="left">
                <form action="/profile/update" method="POST" class="profile-form">

                    <div class="form-row">
                        <div class="form-group last-name">
                            <label for="lastName">نام خانوادگی:</label>
                            <input type="text" id="lastName" name="lastName" value="">
                        </div>
                        <div class="form-group first-name">
                            <label for="firstName">نام:</label>
                            <input type="text" id="firstName" name="firstName" value="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group last-name">
                            <label for="lastName">کد ملی  :</label>
                            <input type="text" id="lastName" name="lastName" value="">
                        </div>
                        <div class="form-group first-name">
                            <label for="firstName">تاریخ تولد:</label>
                            <input type="text" id="firstName" name="firstName" value="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group birth-year">
                            <label for="birthyear">کد نظام پزشکی :</label>
                            <input type="text" id="birthYear" name="birthday" value="">
                        </div>
                        <div class="form-group national-code">
                            <label for="nationalCode">ایمیل پزشک :</label>
                            <input type="text" id="nationalCode" name="nationalCode" value="">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group city">
                            <label for="city">شهر :</label>
                            <select id="city" name="city">
                                <% cities.forEach(city => {%>
                                    <option value="" selected></option>
                                    
                                <%})%>
                                <option value="" selected></option>
                            </select>
                        </div>
                        <div class="form-group gender">
                            <label for="gender">جنسیت :</label>
                            <select id="gender" name="gender">
                                <option value="">انتخاب کنید...</option>
                                <option value="MALE" selected></option>
                                <option value="FEMALE">خانم</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group email">
                            <label for="gender">شماره تماس مطب :</label>
                            <input type="email" id="email" name="email" style="text-decoration: none;"
                                placeholder="">
                        </div>
                        <div class="form-group mobile">
                            <label for="mobile">آدرس کامل مطب :</label>
                            <textarea type="text" id="mobile" name="mobile" value=""></textarea>
                        </div>
                    </div>

                    <div class="form-row button-row">
                        <button type="submit" class="edit-btn">ویرایش اطلاعات</button>
                    </div>

                </form>
            </div>
            <div class="right">
                <form class="profile-image-section" action="/profile/updatePhoto" method="post">
                    <img src="" alt="" class="profile-img">

                    <label for="imageUpload" class="upload-btn">
                        آپلود تصویر <img src="recourses/vectors/add-circle.svg" alt="">
                    </label>
                    <input type="file" id="imageUpload" name="profileImage" style="display: none;" accept="image/*" required>
                </form>
            </div>
        </div>
    </main>
    
</body>

</html>